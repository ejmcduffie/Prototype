# Development Environment Variables (.env.local)

# Next.js Configuration
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# Supabase Configuration (Local Development)
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_local_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_local_service_role_key
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# NextAuth.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_development_nextauth_secret_here

# Google OAuth (Development)
GOOGLE_CLIENT_ID=your_development_google_client_id
GOOGLE_CLIENT_SECRET=your_development_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/callback/google

# Application Configuration
APP_URL=http://localhost:3000
APP_NAME=AncestryChain

# Security
JWT_SECRET=your_jwt_secret_here

